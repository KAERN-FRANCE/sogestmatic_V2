# Configuration pour Railway - Variables d'environnement requises

# Configuration OpenAI (OBLIGATOIRE)
OPENAI_API_KEY=sk-proj-votre_cle_openai_ici
MODEL=gpt-5-mini

# Configuration Firebase (OBLIGATOIRE)
NEXT_PUBLIC_USE_FIREBASE=true
NEXT_PUBLIC_FIREBASE_API_KEY=votre_cle_firebase_api
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=votre_projet.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=votre_projet_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=votre_projet.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=votre_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=votre_app_id

# Configuration Tavily (pour la recherche web - OPTIONNEL)
TAVILY_API_KEY=tvly-dev-votre_cle_tavily

# Configuration RAG (OPTIONNEL)
RAG_K=5
RAG_INTENT_THRESHOLD=0.35
EMBEDDING_MODEL=text-embedding-3-small

# Instructions système personnalisées (OPTIONNEL)
SYSTEM_INSTRUCTIONS=vos_instructions_personnalisees_ici
